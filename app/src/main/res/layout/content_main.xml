<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#313336"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.axxezo.MobileReader.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="1">

        <Spinner
            android:id="@+id/spinner_setLanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray" />

        <Switch
            android:id="@+id/mySwitch"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical|center_horizontal|start"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@android:color/background_light"
            android:textOff="Desembarque"
            android:textOn="Embarque"
            android:textSize="28sp"
            android:textStyle="normal|bold" />

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:srcCompat="@drawable/frii_logo" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/fullname"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Nombre"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_width="300dp" />

        <EditText
            android:id="@+id/rut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="NÂº Documento"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_weight="0.11"
            android:layout_width="150dp"
            android:layout_height="160dp" />

        <TextView
            android:id="@+id/textView_lastManifestUpdate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="300dp" />

    </LinearLayout>

</RelativeLayout>
